pipeline {
    agent any

    tools {
        jdk 'JDK21'
    }

    stages {
           stage('Display Mesage') {
            steps {
                echo 'Hello from github....'
            }
        }
        stage('Checkout code') {
            steps {
                git branch: 'main', url: 'https://github.com/riadhbelgacem/TPGIT.git'
            }
        }

        stage('Compile code') {
            steps {
                sh 'javac src/Main.java'
            }
        }

        stage('Execute code') {
            steps {
                sh 'java -cp src Main'
            }
        }
     stage('SonarQube Analysis') {
                steps {
                   withSonarQubeEnv(installationName:'MySonarQubeServer' , credentialsId:'jenkins-sonar'){
                        sh './mvnw clear org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
                }
            }
        }
    }
}
